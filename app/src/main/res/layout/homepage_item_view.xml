<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:context=".MainActivity">

    <android.support.v4.widget.Space
        android:id="@+id/space_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/param_icon_0"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#606160"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/space_center"
        android:layout_marginBottom="2dp"
        android:textAllCaps="true"
        android:text="标题"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#ACADAC"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/space_center"
        android:layout_marginTop="4dp"
        android:text="描述"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#7F807F"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_more"
        android:layout_marginRight="2dp"
        android:text="344242432432"/>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_more"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E6E5"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_title"/>

</RelativeLayout>